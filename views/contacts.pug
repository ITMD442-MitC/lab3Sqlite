doctype html
html
  head
    title #{title}
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
  body
    .container
      h1.text-center #{title}
      a.btn.btn-success.mb-3(href='/contacts/create') Create Contact
      if contacts.length
        table.table.table-hover
          thead
            tr
              th First Name
              th Last Name
              th Email Address
              th Actions
          tbody
            each contact in contacts
              tr
                td #{contact.firstName}
                td #{contact.lastName}
                td #{contact.email}
                td
                  a.btn.btn-info.btn-sm(href=`/contacts/${contact.id}`) View
      else
        p No contacts found.
